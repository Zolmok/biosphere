{
  "operating_systems": [
    {
      "name": "linux",
      "versions": [
        {
          "types": ["pop", "ubuntu"],
          "package_managers": [
            {
              "meta": {
                "command": "sudo",
                "args": ["apt-get", "update"]
              }
            },
            {
              "meta": {
                "command": "sudo",
                "args": ["apt-get", "upgrade", "-y", "--allow-downgrades", "--with-new-pkgs"]
